{
  "$schema": "../../node_modules/wrangler/config-schema.json",
  "name": "changelog-api",
  "main": "src/index.ts",
  "minify": true,
  "compatibility_date": "2025-05-05",
  "compatibility_flags": ["nodejs_compat"],
  "observability": {
    "enabled": true
  },
  "placement": {
    "mode": "smart"
  },
  "workflows": [
    {
      "name": "changelog-generation-job",
      "binding": "CHANGELOG_GENERATION_JOB_WORKFLOW",
      "class_name": "ChangelogGenerationJobWorkflow"
    }
  ]
}

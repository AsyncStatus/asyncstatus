{
  "name": "@asyncstatus/api",
  "private": true,
  "type": "module",
  "exports": {
    "./auth": {
      "types": "./src/lib/auth.tsx"
    },
    "./typed-handlers/file": "./src/typed-handlers/file-contracts.ts",
    "./typed-handlers/github-integration": "./src/typed-handlers/github-integration-contracts.ts",
    "./typed-handlers/invitation": "./src/typed-handlers/invitation-contracts.ts",
    "./typed-handlers/member": "./src/typed-handlers/member-contracts.ts",
    "./typed-handlers/organization": "./src/typed-handlers/organization-contracts.ts",
